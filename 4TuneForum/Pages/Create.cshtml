@page
@model _4TuneForum.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Topics</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topics.Title" class="control-label"></label>
                <input asp-for="Topics.Title" class="form-control"/>
                <span asp-validation-for="Topics.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topics.Description" class="control-label"></label>
                <textarea asp-for="Topics.Description" rows="5" cols="45" class="form-control"></textarea>
                <span asp-validation-for="Topics.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topics.Creator" class="control-label"></label>
                <label class="form-control">@User.Identity.Name</label>
                <select hidden="true" asp-for="Topics.Creator" class="form-control" asp-items="ViewBag.Creator"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}